# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Monitor Aliases
alias mon-laptop      1680x1050
alias mon-cinema      2560x1440

# 1 Monitor Position Aliases
alias 1-chat         move screenOriginX;screenOriginY                    screenSizeX/9;screenSizeY        ${mon-laptop}
alias 1-tweet        move screenSizeX-332;screenOriginY                  332;screenSizeY                  ${mon-laptop}
alias 1-main         move screenOriginX;screenOriginY                    screenSizeX;screenSizeY          ${mon-laptop}
alias 1-main-chat    move screenOriginX+screenSizeX/9;screenOriginY      6*screenSizeX/9;screenSizeY      ${mon-laptop}
alias 1-main-browser move screenOriginX+screenSizeX/9;screenOriginY      8*screenSizeX/9-332;screenSizeY  ${mon-laptop}
alias 1-top-l        corner top-left                                     screenSizeX/2;screenSizeY/2      ${mon-laptop}
alias 1-top-r        corner top-right                                    screenSizeX/2;screenSizeY/2      ${mon-laptop}
alias 1-bot-l        corner bottom-left                                  screenSizeX/2;screenSizeY/2      ${mon-laptop}
alias 1-bot-r        corner bottom-right                                 screenSizeX/2;screenSizeY/2      ${mon-laptop}

# 2 Monitor Position Aliases
alias 2-main    move screenOriginX;screenOriginY                    screenSizeX;screenSizeY         ${mon-cinema}
alias 2-top     move screenOriginX;screenOriginY                    screenSizeX;screenSizeY/2       ${mon-cinema}
alias 2-bot     move screenOriginX;screenOriginY+screenSizeY/2      screenSizeX/2;screenSizeY/2     ${mon-cinema}
alias 2-left    move screenOriginX;screenOriginY                    screenSizeX/2;screenSizeY       ${mon-cinema}
alias 2-right   move screenOriginX+screenSizeX/2;screenOriginY      screenSizeX/2;screenSizeY       ${mon-cinema}
alias 2-top-l   corner top-left                                     screenSizeX/2;screenSizeY/2     ${mon-cinema}
alias 2-top-r   corner top-right                                    screenSizeX/2;screenSizeY/2     ${mon-cinema}
alias 2-bot-l   corner bottom-left                                  screenSizeX/2;screenSizeY/2     ${mon-cinema}
alias 2-bot-r   corner bottom-right                                 screenSizeX/2;screenSizeY/2     ${mon-cinema}

# 1 Monitor Layout
layout 1monitor 'Terminal':SORT_TITLE,REPEAT              ${1-top-l} | ${1-top-r} | ${1-bot-l} | ${1-bot-r}
layout 1monitor 'iTerm':SORT_TITLE,REPEAT                 ${1-main}
layout 1monitor 'Sublime Text 2':REPEAT                   ${1-main}
layout 1monitor 'Google Chrome':REPEAT                    ${1-main-browser}
layout 1monitor 'Spotify':REPEAT                          ${1-main-browser}
layout 1monitor 'TweetDeck':REPEAT                        ${1-tweet}
layout 1monitor 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts  ${1-chat} | ${1-main-chat}

# 2 Monitor Layout
layout 2monitors 'Terminal':SORT_TITLE,REPEAT             ${2-top-l} | ${2-top-r} | ${2-bot-l} | ${2-bot-r}
layout 1monitor 'iTerm':SORT_TITLE,REPEAT                 ${2-main} 
layout 2monitors 'Google Chrome':REPEAT                   ${2-left}
layout 2monitors 'Sublime Text 2':REPEAT                  ${2-main}
layout 2monitors 'Spotify':REPEAT                         ${1-main}
layout 2monitors 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${1-chat} | ${1-main-chat}

# Default Layouts
default 2monitors resolutions:${mon-laptop};${mon-cinema}
default 1monitor  resolutions:${mon-laptop}

bind 1:ctrl layout 1monitor